conf t
hostname R1
enable secret password
line con 0
password cisco
login
line vty 0 4
password cisco
login
exit
int s0/0/0
ip add 10.1.1.1 255.255.255.252
no shutdown
clock rate 128000
bandwidth 128
exit
int loopback 1
ip add 192.168.1.1 255.255.255.0
end
copy r s
